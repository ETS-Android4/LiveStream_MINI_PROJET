<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/obt_img"
        android:layout_width="262dp"
        android:layout_height="229dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="422dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saving_1" />

    <TextView
        android:id="@+id/text_head"
        android:layout_width="271dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="110dp"
        android:fontFamily="@font/montserratbold700"
        android:gravity="top"
        android:lineSpacingExtra="7sp"
        android:text="Start streaming and invite your friends"
        android:textColor="#2743FD"
        android:textSize="24sp"
        android:translationY="-3.37sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/obt_img" />

    <TextView
        android:id="@+id/description"
        android:layout_width="271dp"
        android:layout_height="84dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="157dp"
        android:fontFamily="@font/montserratregular400"
        android:gravity="top"
        android:lineSpacingExtra="6sp"
        android:text="Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint. "
        android:textColor="#7C2AFF"
        android:textSize="18sp"
        android:translationY="-3.03sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_head" />
</androidx.constraintlayout.widget.ConstraintLayout>